<div class="page-blog-details pt--80 pb--55 bg--white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-12">

        <h1 class="course-name">{{courseName}}</h1>

        <div class="product__info__detailed">
          <div class="pro_details_nav nav justify-content-start" role="tablist">
            <a class="nav-item nav-link" href="/courses/{{courseId}}/introduction">課程介紹</a>
            <a class="nav-item nav-link active" href="/courses/{{courseId}}/lessons">課程內容</a>
            <a class="nav-item nav-link" href="/courses/{{courseId}}/post">問題與討論</a>
          </div>
        </div>


        <div class="orderby__wrapper lessons-list">
          <form action="/courses/{{courseId}}/lessons" method="GET">
            <span>選擇章節</span>
            <select class="shot__byselect" onchange="this.form.submit()" type="text" name="lessonNumber">
              {{#each lessons}}
              <option value="{{this.lessonNumber}}" {{#ifCond ../lessonNumber this.lessonNumber
                }}selected{{/ifCond}}>
                第{{this.lessonNumber}}單元-{{this.title}}</option>
              {{/each}}
            </select>
          </form>
        </div>

        <div class="blog-details content">
          <article class="blog-post-details">
            <div class="post-thumbnail">
              <iframe title="vimeo-player" src="https://player.vimeo.com/video/230332993" width="100%" height="520px"
                frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="post_wrapper">
              <div class="post_header">
                <div class="d-flex justify-content-between">
                  <h2>第{{lesson.lessonNumber}}單元-{{lesson.title}}</h2>
                  <form>
                    <label>
                      {{#if isfinished}}
                      <input type="checkbox" id="completed-checkbox" value="1" checked>
                      <input type="hidden" name="{{courseId}}" value="{{lesson.id}}" id="lesson_info">
                      {{else}}
                      <input type="checkbox" id="completed-checkbox" value="0">
                      <input type="hidden" name="{{courseId}}" value="{{lesson.id}}" id="lesson_info">
                      {{/if}}
                      <span class="fake-checkbox"></span>
                      Completed
                    </label>
                  </form>
                </div>
                <div class="blog-date-categori">
                  <ul>
                    <li><strong>Updated At </strong> {{moment lesson.updatedAt}}</li>
                  </ul>
                </div>
              </div>
              <div class="post_content">
                <h4>Introduction</h4>
                <p>{{lesson.intro}}</p>
                <h4>Content</h4>
                {{{lesson.contents}}}
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</div>
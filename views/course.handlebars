<div class="page-blog-details pt--80 pb--55 bg--white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-12">

        <h1 class="course-name">{{courseName}}</h1>

        <div class="product__info__detailed">
          <div class="pro_details_nav nav justify-content-start" role="tablist">
            <a class="nav-item nav-link" href="/courses/{{courseId}}/introduction">課程介紹</a>
            <a class="nav-item nav-link active" href="/courses/{{courseId}}/lessons">課程內容</a>
            <a class="nav-item nav-link" href="/courses/{{courseId}}/post">問題與討論</a>
          </div>
        </div>

        <div class="lessons-list">
          <div class="buttonGroup d-flex flex-nowrap">
            {{#each lessons}}
            <form action="/courses/{{../courseId}}/lessons" method="GET">
              <input type="hidden" name="lessonNumber" value="{{this.lessonNumber}}">
              {{#ifCond ../lessonNumber this.lessonNumber}}
              <button class="btnOptionPresent" type="submit" value="{{this.lessonNumber}}">
                <div class="d-flex flex-column">第{{this.lessonNumber}}單元</div>{{this.title}}
              </button>
              {{else}}
              <button class="btnOption" type="submit" value="{{this.lessonNumber}}">
                <div class="d-flex flex-column">第{{this.lessonNumber}}單元</div>{{this.title}}
              </button>
              {{/ifCond}}
            </form>
            {{/each}}
          </div>
        </div>

        <div class="blog-details content">
          <article class="blog-post-details">
            <div class="post-thumbnail">
              <div id="ytplayer_frame">
                <iframe id="ytplayer" type="text/html" width="100%" src="{{lesson.videoURL}}" frameborder="0"></iframe>
              </div>
            </div>
            <div class="post_wrapper">
              <div class="post_header">
                <div class="d-flex justify-content-between">
                  <h2>{{lesson.title}}</h2>
                  <form>
                    <label>
                      {{#if isfinished}}
                      <input type="checkbox" id="completed-checkbox" value="1" checked>
                      <input type="hidden" name="{{courseId}}" value="{{lesson.id}}" id="lesson_info">
                      {{else}}
                      <input type="checkbox" id="completed-checkbox" value="0">
                      <input type="hidden" name="{{courseId}}" value="{{lesson.id}}" id="lesson_info">
                      {{/if}}
                      <span class="fake-checkbox"></span>
                      Completed
                    </label>
                  </form>
                </div>
                <p>{{lesson.intro}}</p>
                <div class="blog-date-categori">
                  <ul>
                    <li><strong>Updated At </strong> {{moment lesson.updatedAt}}</li>
                  </ul>
                </div>
              </div>
              <div class="post_content">
                <div id="lesson-content">{{{lesson.contents}}}</div>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</div>